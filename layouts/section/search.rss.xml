<!-- This is an OpenSearch plugin, not RSS feed -->
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/" xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>FxSiteCompat.com</ShortName>
  <Description>{{ $.Site.Title }}</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="32" height="32" type="image/png">{{ $.Site.BaseURL }}images/template/favicon.png</Image>
  <Url type="application/opensearchdescription+xml" rel="self" template="{{ $.Site.BaseURL }}search/index.xml" />  
  <Url type="text/html" method="GET" template="https://cse.google.com/cse?cx={{ $.Site.Params.GoogleSiteSearchID }}&amp;lr=lang_{{ $.Site.Params.GoogleSiteSearchLang }}&amp;q={searchTerms}" />
  <moz:SearchForm>https://cse.google.com/cse/home?cx={{ $.Site.Params.GoogleSiteSearchID }}&amp;lr=lang_{{ $.Site.Params.GoogleSiteSearchLang }}</moz:SearchForm>
</OpenSearchDescription>
